{
    "name": "velum-bot",
    "version": "0.0.0",
    "description": "Bot for roll",
    "main": "dist/index.js",
    "repository": "github:lisandra-dev/velum-bot",
    "scripts": {
        "init": "pnpm i && node install.js",
        "build": "tsc",
        "prestart": "pnpm run build",
        "start": "pm2 start dist/src/index.js --name Velum-bot --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
        "stop": "pm2 stop Velum-bot",
        "prerestart": "pnpm run build",
        "restart": "pm2 restart Velum-bot",
        "delete": "pm2 delete Velum-bot",
        "dev": "ts-node-dev --respawn -- src/index.ts",
        "dev:prod": "cross-env ENV=production ts-node-dev --respawn -- src/index.ts",
        "lint": "eslint --ext .ts src/",
        "lint:fix": "eslint --ext .ts src/ --fix"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "ansi-colors": "^4.1.3",
        "cron-validator": "^1.3.1",
        "dedent": "^0.7.0",
        "discord.js": "14.11.1-dev.1689854654-d26e022.0",
        "dotenv": "^16.3.1",
        "enmap": "^5.9.8",
        "eslint": "^8.45.0",
        "eslint-plugin-jsonc": "^2.9.0",
        "i18next": "^22.5.1",
        "latinize": "^0.5.0",
        "openweather-api-node": "^3.1.1",
        "pm2": "^5.3.0",
        "readline-sync": "^1.4.10",
        "ts-dedent": "^2.2.0"
    },
    "devDependencies": {
        "@discordjs/rest": "^1.7.1",
        "@types/cron": "^2.0.1",
        "cron": "^2.3.1",
        "cross-env": "^7.0.3",
        "lunarphase-js": "^2.0.1",
        "node-gyp": "^9.4.0",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6"
    }
}

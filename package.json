{
    "name": "velum-bot",
    "version": "0.0.0",
    "description": "Bot for roll",
    "main": "dist/index.js",
    "scripts": {
        "init": "pnpm i && node install.js",
        "build": "tsc",
        "postbuild" : "pnpm run stop",
        "prestart": "pnpm run build",
        "start": "pm2 start dist/src/index.js --name Velum-bot --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
        "stop": "pm2 stop Velum-bot",
        "prerestart": "pnpm run build",
        "restart": "pm2 restart Velum-bot",
        "delete": "pm2 delete Velum-bot",
        "dev": "ts-node-dev --respawn -- src/index.ts",
        "lint": "eslint --ext .ts src/",
        "lint:fix": "eslint --ext .ts src/ --fix"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "ansi-colors": "^4.1.3",
        "dedent": "^0.7.0",
        "discord.js": "^14.11.0",
        "dotenv": "^16.3.1",
        "enmap": "^5.9.8",
        "eslint": "^8.43.0",
        "eslint-plugin-jsonc": "^2.9.0",
        "i18next": "^22.5.1",
        "latinize": "^0.5.0",
        "pm2": "^5.3.0",
        "readline-sync": "^1.4.10",
        "sequelize": "^6.32.1",
        "sqlite3": "^5.1.6",
        "ts-dedent": "^2.2.0"
    },
    "devDependencies": {
        "@discordjs/rest": "^1.7.1",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tslib": "^2.6.0",
        "typescript": "^4.9.5"
    }
}

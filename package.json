{
    "name": "velum-bot",
    "version": "0.0.0",
    "description": "Bot for roll",
    "main": "dist/index.js",
    "repository": "github:lisandra-dev/velum-bot",
    "scripts": {
        "init": "pnpm i && node install.js",
        "build": "tsc",
        "prestart": "pnpm run build",
        "start": "pm2 start dist/src/index.js --name Velum-bot --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
        "stop": "pm2 stop Velum-bot",
        "prerestart": "pnpm run build",
        "restart": "pm2 restart Velum-bot",
        "delete": "pm2 delete Velum-bot",
        "dev": "ts-node-dev --respawn -- src/index.ts",
        "dev:prod": "cross-env ENV=production ts-node-dev --respawn -- src/index.ts",
        "lint:fix": "eslint --fix --ext .ts src/"
    },
    "pnpm": {
        "overrides": {
            "semver@>=6.0.0 <6.3.1": ">=6.3.1",
            "semver@>=7.0.0 <7.5.2": ">=7.5.2",
            "puppeteer": ">=20.0.0",
            "uuid": ">=9.0.0"
        }
    },
    "devDependencies": {
        "@discordjs/rest": "^1.7.1",
        "@lisandra-dev/eslint-config": "^1.1.4",
        "@lisandra-dev/node-html-to-image": "^3.3.2",
        "@types/adm-zip": "^0.5.0",
        "@types/cron": "^2.0.1",
        "@types/html-minifier": "^4.0.2",
        "@types/parse-color": "^1.0.1",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "adm-zip": "^0.5.10",
        "ansi-colors": "^4.1.3",
        "chartjs-node-canvas": "^4.1.6",
        "color-parse": "^1.4.2",
        "cron": "^2.4.0",
        "cron-validator": "^1.3.1",
        "cross-env": "^7.0.3",
        "dedent": "^0.7.0",
        "deepl-node": "^1.10.2",
        "discord-html-transcripts": "^3.1.4",
        "discord.js": "14.12.0",
        "dotenv": "^16.3.1",
        "enmap": "^5.9.8",
        "html-minifier": "^4.0.0",
        "i18next": "^22.5.1",
        "lunarphase-js": "^2.0.1",
        "node-gyp": "^9.4.0",
        "nodemon": "^2.0.22",
        "openweather-api-node": "^3.1.1",
        "parse-color": "^1.0.0",
        "pm2": "^5.3.0",
        "readline-sync": "^1.4.10",
        "ts-dedent": "^2.2.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tslib": "^2.6.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@kurkle/color": "^0.3.2",
        "canvas": "^2.11.2",
        "chartjs-plugin-datalabels": "^2.2.0",
        "eslint": "^8.46.0"
    }
}
